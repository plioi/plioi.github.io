---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text" xml:lang="en">{{ site.root_desc }}</title>
    <link type="application/atom+xml" href="http://patrick.lioi.net/atom.xml/" rel="self"/>
    <link type="text" href="http://patrick.lioi.net" rel="alternate"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>http://patrick.lioi.net</id>
    <author>
        <name>Patrick Lioi</name>
    </author>
    <rights>Copyright (c) 2013, Patrick Lioi; all rights reserved.</rights>
    {% for post in site.posts limit:10 %}
    <entry>
        <title>{{ post.title }}</title>
        <link href="http://patrick.lioi.net{{ post.url }}"/>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>http://patrick.lioi.net{{ post.id }}</id>
        <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
    {% endfor %}
</feed>